        <PasswordBox x:Name="txt_Password" HorizontalAlignment="Left" Margin="335,286,0,0" VerticalAlignment="Top" Width="185" Height="20"/>
        <PasswordBox x:Name="txt_PasswW" HorizontalAlignment="Left" Margin="334,318,0,0" VerticalAlignment="Top" Width="185" Height="20"/>


    </Grid>
</Window>
