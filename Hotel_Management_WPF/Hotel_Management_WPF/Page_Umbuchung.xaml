<Page x:Class="Hotel_Management_WPF.Page_Umbuchung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel_Management_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page_Umbuchung">

    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Label Content="Geben Sie die Buchungsnummer ein" HorizontalAlignment="Left" Margin="55,53,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Kozuka Gothic Pr6N L"/>
        <Label Content="Buchungsnummer:" HorizontalAlignment="Left" Margin="57,124,0,0" VerticalAlignment="Top" FontFamily="Kozuka Gothic Pr6N EL" FontSize="16"/>
        <TextBox x:Name="txt_Suche" HorizontalAlignment="Left" Height="23" Margin="267,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" TextChanged="txt_Suche_TextChanged"/>
        <Button Content="Suchen" HorizontalAlignment="Left" Margin="267,187,0,0" VerticalAlignment="Top" Width="176" Height="27" FontWeight="Bold" Click="Button_Click"/>
    </Grid>
</Page>
